<h1>検索</h1>

<%= form_with url: search_movies_path, method: :get, local: true do %>
  <%= label_tag :query, "映画検索" %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "検索" %>
<% end %>

<% unless @movies.nil? %>
  <ul>
    <% @movies.each do |movie| %>
      <li><%= movie.title %> (<%= movie.release_date %>)</li>
    <% end %>
  </ul>
<% else %>
  <p>検索結果はありませんでした</p>
<% end %>