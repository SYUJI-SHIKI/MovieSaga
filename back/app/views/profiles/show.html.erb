<%= link_to '編集', edit_profile_path, class: 'btn btn-edit float-right ' %>
<%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-logout float-right' %>
<div class="profile-container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="float-left mb-3">
      <%= image_tag current_user.avatar_url, class: 'rounded-circle', size: '100x100' %>
        <%= "#{current_user.name}" %>
      </div>
      <%= link_to '自分の特集一覧', my_lists_collections_path %>
      <h3>お気に入り一覧</h3>
      <div class="movies-index">
        <% @movies.each do |movie| %>
          <div class="movie-item">
            <%= link_to movie_path(movie.tmdb_id), class: "poster-container" do %>
              <%= image_tag("https://image.tmdb.org/t/p/w200#{movie['poster_path']}", alt: movie['original_title']) %>
            <% end %>
          </div>
        <% end %>
      </div>
      <h3>ブックマーク一覧</h3>
      <div class="movies-index">
        <% @collections.each do |collection| %>
          <div class="movie-item">
            <h3><%= collection.title %></h3>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>