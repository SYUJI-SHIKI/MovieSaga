<div class="profile-container">
  <div class="float-left mb-3">
    <%= image_tag current_user.avatar_url, class: 'rounded-circle', size: '200x200' %>
    <div class="profile-leftside"><%= "#{current_user.name}" %>
      <div>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-logout' %>
        <%= link_to '編集', edit_profile_path, class: 'btn btn-edit' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="link-container">
        <div><%= link_to '自分の特集一覧へ', my_lists_collections_path %></div>
        <div><%= link_to 'ブックマーク一覧へ', bookmark_collections_path %></div>
      </div>
      <div class="favorites-section">
        <div>お気に入り一覧</div>
        <div class="movie-profile-container pt-3">
          <div class="show-collection-movies-container">
            <% @movies.each do |movie| %>
              <%= link_to movie_path(movie.tmdb_id), class: "show-collection-movie-item" do %>
                <%= image_tag("https://image.tmdb.org/t/p/w200#{movie['poster_path']}", alt: movie.original_title, class: 'show-collection-movie-image') %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>